<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="status_color">#E1EFFF</color>

    <style name="Theme.Emoji" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <!-- Full screen configuration -->
        <item name="android:statusBarColor">@color/status_color</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Hide navigation bar -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>

    </style>
    <style name="Theme.MyApp.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ... -->
    </style>
</resources>